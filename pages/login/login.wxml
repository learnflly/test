<view class="login-container">
  <view class="title">
  <view>
  <image src="../../images/tree.png" style="width:100rpx;height: 100rpx;margin-top: 0rpx;"></image>
  </view>
  登录</view>
  <view class="login-box">
    <label>学号</label>
    <input class="inputText" placeholder="请输入学号" bindinput="userNameInput" /> 
    <label>密码</label>
    <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
    <button class="login-btn" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">立即登录</button> 
    <view class="three-line">一一一一一第三方登录一一一一一</view>
    <button class="login-btn" style="background-color:#d37f3a;" bindtap="getCodeTap">微信登录</button>
  </view>
</view>