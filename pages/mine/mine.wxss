.UCenter-bg {
  background-color: #3E8E7E;
  height: 700rpx;
  display: flex;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}
.userhead {
  width: 400px;
  height: 700px;
}
image::after
{
  border: 0;
}
.UCenter-bg .gif-wave{
  display: flex;
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
.UCenter-bg text {

  opacity: 0.8;
}
image {
	max-width: 100%;
